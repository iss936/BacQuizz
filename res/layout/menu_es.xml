<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/quizz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/mybutton"
        android:minHeight="60dp"
        android:minWidth="200dp"
        android:onClick="onClickQuizz"
        android:text="@string/quizz" />

    <Button
        android:id="@+id/fiche_revision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/quizz"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:background="@drawable/mybutton"
        android:minHeight="60dp"
        android:minWidth="200dp"
        android:onClick="onClickFicheRevision"
        android:text="@string/fiche_revision" />

    <Button
        android:id="@+id/ma_fiche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/quizz"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:background="@drawable/mybutton"
        android:minHeight="60dp"
        android:minWidth="200dp"
        android:onClick="onClickMaFiche"
        android:text="@string/ma_fiche" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="Histoire - GÃ©ographie"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

</RelativeLayout>